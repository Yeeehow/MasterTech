<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MasterTechParallelMAUI.Views.Translate.TranslatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F5F5F5"
    Shell.NavBarIsVisible="False">

    <!-- Main Layout -->
    <VerticalStackLayout Spacing="16" Padding="0">

        <!-- Top Bar with Language Select -->
        <VerticalStackLayout Spacing="8" HorizontalOptions="Center" Padding="16">
            <Label Text="Detected Language" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="English" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Translate To" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Malay" FontSize="14" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
        </VerticalStackLayout>

        <!-- Center Image Box for Camera -->
        <Frame HeightRequest="200" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center" 
               BackgroundColor="#eeeeee" BorderColor="#1976D2" Padding="20">
            <!-- Image will be shown here after taking the picture -->
            <Image x:Name="cameraImage" HorizontalOptions="Center" VerticalOptions="Center" />
        </Frame>

        <!-- Bottom Bar with Camera Button -->
        <Grid Padding="16">
            <Button Text="Take Picture" BackgroundColor="#D32F2F" TextColor="White" WidthRequest="200" HeightRequest="50" 
                    HorizontalOptions="Center" VerticalOptions="End" Clicked="OnTakePictureClicked" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>
